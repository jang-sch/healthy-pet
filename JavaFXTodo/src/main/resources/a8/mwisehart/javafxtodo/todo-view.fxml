<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #A2DA5A;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="a8.mwisehart.javafxtodo.TodoController">
   <children>
      <TabPane fx:id="tabListst" maxHeight="35.0" style="-fx-background-color: #000000;" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="NEVER">
        <tabs>
          <Tab onSelectionChanged="#onTabChanged" text="Home">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab onSelectionChanged="#onTabChanged" text="School">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: #A2B2DF;" />
            </content>
          </Tab>
            <Tab onSelectionChanged="#onTabChanged" text="Work">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                </content>
            </Tab>
            <Tab onSelectionChanged="#onTabChanged" text="Groceries">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: #000000;" />
                </content>
            </Tab>
        </tabs>
      </TabPane>
      <ListView fx:id="listItems" onMouseClicked="#onItemClicked" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #A2B2DF;" VBox.vgrow="ALWAYS" />
      <HBox spacing="10.0" style="-fx-background-color: #A2B2DF;" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="txtItem" onAction="#onAddItem" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onAddItem" text="Add" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
